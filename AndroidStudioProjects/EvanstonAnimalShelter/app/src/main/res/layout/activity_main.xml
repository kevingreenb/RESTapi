<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.evanstonanimalshelter.MainActivity">


    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_image"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="2310 Oakton St, Evanston, IL 60202"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hours_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_text"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Weekdays: 6 PM - 8 PM* \nWeekends: 12 PM - 3:30 PM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hours_text"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/twitter_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:onClick="onClick"
            android:src="@drawable/twitter"
            android:tag="https://twitter.com/evanstonpets" />

        <ImageView
            android:id="@+id/facebook_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:onClick="onClick"
            android:src="@drawable/facebook"
            android:tag="https://www.facebook.com/evanstonpets" />

        <ImageView
            android:id="@+id/instagram_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:onClick="onClick"
            android:src="@drawable/instagram"
            android:tag="https://www.instagram.com/evanstonpets" />
    </LinearLayout>

</RelativeLayout>
